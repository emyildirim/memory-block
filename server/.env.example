# Memory Block Server Environment Variables
# Copy this file to .env and fill in your actual values

NODE_ENV=development
PORT=5001

# MongoDB Configuration
# Get your MongoDB connection string from MongoDB Atlas
MONGODB_URI=mongodb+srv://YOUR_USERNAME:YOUR_PASSWORD@YOUR_CLUSTER.mongodb.net/?retryWrites=true&w=majority&appName=YourAppName

# JWT Configuration
# Generate a secure random string for JWT_SECRET (at least 32 characters)
JWT_SECRET=your_super_secure_jwt_secret_key_here_min_32_chars
JWT_EXPIRE=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:3000
