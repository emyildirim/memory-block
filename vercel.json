{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "client/dist",
  "installCommand": "npm run install-all",
  "builds": [
    { 
      "src": "client/package.json", 
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    { 
      "src": "server/server.js", 
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/dist/$1"
    }
  ]
} 